<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.co.company.lpmessenger.MainActivity" >

    <Button
        android:id="@+id/network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/joinchat"
        android:layout_below="@+id/joinchat"
        android:layout_marginTop="28dp"
        android:background="@drawable/bt"
        android:onClick="myListener3"
        android:text="네트워크 상태조회" />

    <Button
        android:id="@+id/groupchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/network"
        android:layout_below="@+id/network"
        android:layout_marginTop="28dp"
        android:background="@drawable/bt"
        android:onClick="myListener5"
        android:text="그룹채팅" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="메뉴 선택"
        android:textColor="#9E0DFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/networkcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/bt"
        android:onClick="myListener4"
        android:text="네트워크 연결" />

    <Button
        android:id="@+id/joinchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/networkcon"
        android:layout_below="@+id/networkcon"
        android:layout_marginTop="22dp"
        android:background="@drawable/bt"
        android:onClick="myListener2"
        android:text="Wifi채팅(1:1)" />

</RelativeLayout>